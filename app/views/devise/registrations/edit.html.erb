<section id="primary_content" class="single">
	
	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "primary_panel slides" }) do |f| %>

		<h1 class="ir">Your Profile<span></span></h1>
		
		<%= render "shared/notices" %>

		<div class="fields">

			<fieldset class="slide slide_why">
				<legend>Your 'why'</legend>
				<%= f.input :reasons_for_joining, :label => "What makes you want to do Good for Nothing?", :input_html => { :rows => 5 }, :wrapper_html => { :class => "smart_label" } %>
			</fieldset>

			<fieldset class="slide chapters">
				<legend>Do you live near a GFN chapter?</legend>
				<%= f.input :location, :label => "Nope...", :wrapper_html => { :class => "smart_label grow_tip", :title => "Not to worry, where are you?" } %>
				<%= f.association :chapter, collection: Chapter.where('title <>?', "Mothership").order('title ASC'), :as => :radio_buttons, :label_method => lambda { |c| "#{c.title}<span>#{c.country}</span>".html_safe }, :label => "", :wrapper_html => { :class => "solid_splodges" } %>
				<%= image_tag "illustrations/maptorch.png", :class => "slide_illustration" %>
			</fieldset>

			<fieldset class="slide slide_contact">
				
				<legend>How can people find you?</legend>
				
				<div class="form_panels">
					
					<div class="half_panel">
						<%= f.input :name, :required => true, :wrapper_html => { :class => "smart_label" } %>
						
						<%= f.input :url, :label => "Your digital location", :wrapper_html => { :class => "smart_label" } %>
						<%= f.input :twitter_handle, :wrapper_html => { :class => "smart_label" } %>
					</div>

					<div class="half_panel">
						<%= f.input :email, :required => true, :wrapper_html => { :class => "smart_label" } %>
						<%= f.input :subscribed, :as => :boolean, :label => "On the GFN mailing list?" %>
					</div>
					
				</div>
			
				<%= f.button :submit, "Update me" %>
				
					
			</fieldset>
		
			

			<!--<fieldset class="slide">
				<legend>Change your password?</legend>

				<%= f.input :password, :label => "New password", :required => false, :wrapper_html => { :class => "smart_label" }, :input_html => { :autocomplete => "off" } %>
				<%= f.input :password_confirmation, :label => "Confirm new password", :required => false, :input_html => { :autocomplete => "off" }, :wrapper_html => { :class => "smart_label" } %>
				
				
			</fieldset>-->
			
		</div>

	
	<% end %>
	
</section>
