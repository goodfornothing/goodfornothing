#profile #history h3 {
	margin-bottom: 35px;
	color: #61514D;
	padding-bottom: 4px;
	display: inline-block;
	background: url(<%= asset_path "assets/hover_2.png" %>) repeat-x bottom left;
}

#profile #history ul.action_items {
	margin-bottom: 50px;
	text-align: left;
	list-style-type: none;
	width: 380px;
	margin: 0 auto;
}

#profile #history ul.action_items li {
	padding: 2px 0 10px 58px;
	background-repeat: no-repeat;
	background-position: left top;
