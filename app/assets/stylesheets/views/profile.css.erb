	width: 130px;
}

#profile .action_history li a {
	color: #61514D;
}

#profile .action_history li a:hover,
#profile .action_history li a:focus,
#profile .action_history li a:active {
	color: #D0122D;
	text-decoration: none;
}

#profile .action_history li:last-child {
	margin: 0;
}

#profile .action_history li.action_trill a,
#profile .action_history li.action_trill span { 
