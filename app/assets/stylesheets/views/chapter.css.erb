/* Layout */

	.section_colophon.view_chapter #main,
	.section_colophon.view_chapter #main,
	.section_colophon.view_chapter #main {
		overflow: visible;
		width: auto;
		margin: 0;
		padding: 0;
	}

	.section_colophon.view_chapter #main #primary_content,
	.section_colophon.view_chapter #main #primary_content,
	.section_colophon.view_chapter #main #primary_content {
		float: none;
		width: auto;
	}

	.section_colophon.view_chapter header,
	.section_colophon.view_chapter {
		background: #ffffff;
	}
	
	.section_colophon.view_chapter header .container {
		background: transparent;
		padding-bottom: 50px;
	}

	.chapter_sign_up h1 {
		width: 508px;
		height: 116px;
		margin: 0 auto 115px;
	}

	.chapter_sign_up h1 span {
		background: url(<%= asset_path "text/hood.gif" %>) no-repeat;
	}
	
	.chapter_sign_up h2, .chapter_sign_up h3 {
		color: #D0122D;
		font-size: 24px;
		line-height: 31px;
	}
	
/* Chapter introduction */
	
	#chapter_introduction { 
		width: 960px;
		margin: 0 auto;
	}
	
	#chapter_movement {
		width: 470px;
		padding-right: 490px;
		background: url(<%= asset_path "illustrations/town.gif" %>) no-repeat 130% 10px;
		height: auto !important;
		height: 300px;
		min-height: 340px;
		margin-bottom: 95px;
	}
	
	#chapter_contact {
		margin-bottom: 45px;
	}
	
	#chapter_contact h2 {
		text-align: center;
		margin-bottom: 40px;
		line-height: 50px;
		font-size: 40px;
	}
	
	#chapter_contact p {
		text-align: center;
	}

	.splodge_list {
		list-style-type: none;
		padding: 0;
		margin-bottom: 0px;
	}

	.splodge_list li { 
		display: inline-block;
		margin: 0 20px 15px 0;
	}

	.splodge_list li:nth-child(6n+6) { 
		margin-right: 0;
	}

	.splodge_list li a {
		display: block;
		width: 140px;
		height: 20px;
		padding: 55px 0;
		font-family: "Good for Nothing";
		text-align: center;
		background: url(<%= asset_path "assets/red_splodge.png" %>) no-repeat;
		font-size: 16px;
	}

	.splodge_list li a:hover,
	.splodge_list li a:focus,
	.splodge_list li a:active {
		text-decoration: none;
		background-color: #D0122D;
		color: #ffffff;
	}
	
/* Chapter start */

	#chapter_start {
		background: #F0ECE9;
		padding: 70px 0 0;
	}
	
	#chapter_start h2 {
		text-align: center;
		font-size: 34px;
		line-height: 46px;
		background: url(<%= asset_path "assets/red_squiggle.png" %>) repeat-x bottom center;
		padding-bottom: 10px;
		display: block;
		width: 468px;
		margin: 0 auto 85px;
	}
	
	#chapter_flow {
		padding: 0;
		margin: 0;
		list-style-type: none;
		background: url(<%= asset_path "assets/new_chapter_flow.gif" %>) no-repeat;
		min-height: 950px;
		position: relative;
	}
	
	#chapter_flow li {
		position: absolute;
		font-family: "Good for Nothing";
		font-size: 20px;
		line-height: 26px;
		color: #D0122D;
		text-align: center;
		padding: 0;
		margin: 0;
	}
	
	#chapter_flow li:first-child {
		top: 120px;
		left: 28px;
		width: 145px;
	}
	
	#chapter_flow li:nth-child(2) {
		text-indent: -3000px;
	}
	
	#chapter_flow li:nth-child(3) {
		color: #085156;
		right: 70px;
		top: 75px;
		width: 130px;
	}
	
	#chapter_flow li:nth-child(4) {
		right: 49px;
		top: 407px;
		width: 130px;
	}
	
	#chapter_flow li:nth-child(5) {
		color: #ffffff;
		right: 426px;
		top: 377px;
		width: 240px;
	}
	
	#chapter_flow li:nth-child(6) {
		left: 25px;
		top: 504px;
		width: 130px;
	}
	
	#chapter_flow li:nth-child(7) {
		background: url(<%= asset_path "blocks/rig.gif" %>) no-repeat top left;
		bottom: 0;
		left: 160px;
		color: #ffffff;
		width: 270px;
		height: 70px;
		padding: 115px 400px 163px 22px;
	}
	
	#chapter_crew {
		width: 510px;
		padding-left: 450px;
		background: url(<%= asset_path "assets/crew.png" %>) no-repeat 0 5px;
		margin-bottom: 80px;
		height: auto !important;
		height: 215px;
		min-height: 215px;
	}
	
/* Chapter commit */

	#chapter_commit {
		background: #61514D;
		padding: 45px 0 25px;
	}
	
	#chapter_commit p:nth-child(2) {
		padding-top: 5px;
	}
	
	#chapter_commit p:last-child {
		margin: 0;
	}
	
	#chapter_commit p {
		color: #ffffff;
	}
	
	#chapter_commit h3 {
		text-indent: -1337px;
		width: 479px;
		height: 348px;
		float: left;
		margin-right: 60px;
	}
	
	#chapter_commit span {
		background: url(<%= asset_path "text/commitment.gif" %>);
	}
	
/* Chapter call */

	#chapter_call {
		background: #F0ECE9;
		padding: 78px 0 80px;
		text-align: center;
	}
	
	#chapter_call .container {
		position: relative;
		overflow: visible;
	}
	
	#chapter_call .container:before {
		content: '';
		display: block;
		position: absolute;
		bottom: -130px;
		left: 0;
		height: 221px;
		width: 139px;
		background: url(<%= asset_path "assets/spaceship.png" %>) no-repeat top left;
	}
	
	#chapter_call p {
		text-align: center;
		width: 60%;
		margin: 0 auto 67px;
		font-size: 18px;
		line-height: 25px;
	}
	
	p#call_mothership { margin-bottom: 10px; }
	
	#call_mothership a {
		display: block;
		margin: 0 auto;
		width: 466px;
		height: 110px;
		text-indent: -2537px;
		background: url(<%= asset_path "assets/mothership_button.png" %>) no-repeat top left;
	}
